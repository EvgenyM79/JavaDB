<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/db2?serverTimezone=UTC</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="connection.pool_size">5</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class = "HibernateUtils"/>
        <mapping class = "ObjectDAO"/>
        <mapping class = "Parents"/>
        <mapping class = "Passport"/>
        <mapping class = "Children"/>
        <mapping class = "AreaStreet"/>
        <mapping class = "EducateBuilding"/>
        <mapping class = "Main"/>
    </session-factory>
</hibernate-configuration>

